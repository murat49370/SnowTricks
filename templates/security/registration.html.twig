{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}


{% block body %}
    <div class="d-flex justify-content-center">

        <div class="row">
            <div class="col-12 mt-4">
                <h2>Inscription</h2>
            </div>
            <div class="col-10 border m-2 p-2 mb-7 ">
                {{ form_start(form) }}

                {{ form_row(form.email, { 'label': 'Adresse Email :', 'attr': {'placeholder': 'Votre Email...'} }) }}
                {{ form_row(form.first_name, { 'label': 'Nom :', 'attr': {'placeholder': 'Votre nom...'} }) }}
                {{ form_row(form.last_name, { 'label': 'Prénom :', 'attr': {'placeholder': 'Votre prénom...'} }) }}
                {{ form_row(form.pseudo, { 'label': 'Pseudo :', 'attr': {'placeholder': 'Votre pseudo...'} }) }}
                {{ form_row(form.password, { 'label': 'Mot de passe :' }) }}
                {{ form_row(form.confirm_password, { 'label': 'Confirmer mot de passe :' }) }}
                <button type="submit" class="btn btn-primary">Inscription</button>

                {{ form_end(form) }}

                <div class="row mt-4 ml-1">
                    <a href="{{ path('login') }}">Vous avez déjà un compte ?</a>
                </div>
            </div>

        </div>

    </div>

{% endblock %}