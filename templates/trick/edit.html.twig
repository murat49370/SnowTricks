{% extends 'base.html.twig' %}

{% block title %}Détaille d'un trick{% endblock %}

{% block body %}


    {{ form_start(form) }}
    <div class="container mt-5 mb-5 pr-0 pl-0">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <header class="jarallax bg-dark" data-jarallax data-type="scale-opacity" data-speed="0.09">

            <div class="jarallax-img px-0" style="background-image: url(
            {% if trick.mainImage %}
                {{ asset('uploads/images/' ~ trick.mainImage.name ) }}
            {% else %}
                {{ asset('uploads/images/default.jpg') }}
            {% endif %}

            );"></div>
            <div class="container">
                <div class="d-flex flex-row-reverse align-items-start">
                    <div class="row border m-2" style="background: #ffffff" >
                        <div class="m-2">
                            <a class="inline" href="#"><i class="fe-edit-2"></i></a>
                        </div>
                        <div class="m-2">
                            <a class="inline" href="#"><i class="fe-trash"></i></a>
                        </div>

                    </div>
            </div>
            <div class="container py-md-3">
                <div class="row justify-content-md-center">
                    <div class="col-xl-6 col-lg-6 col-md-6">
                        <div class=" rounded-lg box-shadow-lg py-5">
                            <h1 class="text-center text-white mb-5 py-5">{{ trick.title }}</h1>
                        </div>
                    </div>
                </div>
            </div>
        </header>
    </div>


    <div class="container border border-secondary pt-4">

        {{ form_row(form.title) }}

        <!-- Section medias edit -->
        <section>
            <div class="row">
                <div class="col-6">
                    {{ form_row(form.images) }}
                </div>
                <div class="col-6">
                    {{ form_row(form.videos) }}
                </div>
            </div>
        </section>

        <!-- Section medias view -->
        <section>
            <div class="row">
                {% for image in trick.images %}
                    <div class="col" >
                        <img src="{{ asset('uploads/images/' ~ image.name ) }}" alt="image">
                        <a href="{{ path('trick_delete_image', {'id': image.id}) }}"
                           data-delete data-token="{{ csrf_token('delete' ~ image.id) }}">Supprimé</a>
                    </div>
                {% endfor %}
                {% for video in trick.videos %}
                    <div class="col" >
                        <embed type="video/webm" src="{{ video.url }}" width="200">
                        <a href="{{ path('trick_delete_video', {'id': video.id}) }}"
                           data-delete data-token="{{ csrf_token('delete' ~ video.id) }}">Supprimé</a>
                    </div>
                {% endfor %}
            </div>
        </section>

        <!-- Trick content -->
        <section class="container pt-7 col-10" >
            <div class="row">
                <div class="col">
                    <p>{{ form_row(form.content) }}</p>
                </div>
            </div>
        </section>

        <section class="container pt-7 col-10" >
            <div class="row d-flex justify-content-between">
                <div class="col">
                    <p>{{ form_row(form.trick_group) }}</p>
                </div>
                <div class="col">
                    <button class="btn btn-primary">{{ button|default('Enregistrer') }}</button>
                </div>
            </div>
        </section>



    </div>
    {{ form_end(form) }}


{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/medias.js') }}"></script>

{% endblock %}
