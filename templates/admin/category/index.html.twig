{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur SnowTricks{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Gérer les Tricks</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <div class="text-right"><a href="{{ path('admin_category_create') }}" class="btn btn-primary">Crée une catégorie</a></div>
        <br>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Titre</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
            <tr>
                <td>{{ category.title }}</td>
                <td>
                    <a href="{{ path('admin_category_edit', {id: category.id}) }}" class="btn btn-secondary">Editer</a>
                    <form method="post" action="{{ path('admin_category_delete', {id: category.id}) }}" style="display: inline-block" onsubmit="return confirm('Êtes vous vraiement sûr ?')">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">

                        <button class="btn btn-danger">Supprimer</button>
                    </form>

                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>


        </div>
{% endblock %}
