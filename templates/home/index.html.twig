{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur SnowTricks{% endblock %}

{% block body %}

    <!-- Hero-->
    <section class="jarallax bg-dark py-6 py-md-7" data-jarallax data-type="scale-opacity" data-speed="0.09">
        <div class="jarallax-img" style="background-image: url(img/home/hero-snow.jpg);"></div>
        <div class="container py-md-3">
            <div class="row justify-content-md-center">
                <div class="col-xl-6 col-lg-6 col-md-6">
                    <div class=" rounded-lg box-shadow-lg py-5">
                        <div class="py-sm-2 px-sm-3">
                            <h1 class="text-center text-white mb-4">Bienvenue sur SnowTricks</h1>
                            <div class="row mt-4">
                                <div class="col-sm-12">
                                    <h2 class="text-center text-white mb-4">Le site communautaire de référence sur le Snow Bord !</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>



    <!-- List Tricks-->
    <section class="bg-secondary d-flex justify-content-center mt-4 py-5 my-md-0 pt-md-7 pb-md-6" >
        <div class="container-fluid">

            <!-- Messages Flash-->
            <div class="container">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>


            <div class="row d-flex justify-content-center">
                {% for trick in tricks %}
                    <div class=" card col-md-2 m-1 pr-0 pl-0">
                        <img src="{{ asset('uploads/images/') }}{% if trick.mainImage %}{{ trick.mainImage.name }}{% else %}default.jpg{% endif %}" class="card-img-top m-0" alt="...">
                        <div class="card-footer">
                            <div class="row">
                                <div class="col-lg-9">
                                    <h5 class="card-title"><a href="{{ path('trick_read', { id: trick.id }) }}">{{ trick.title }}</a></h5>
                                </div>
                                <div class="col-lg-3">
                                    {% if app.user %}
                                        {% if app.user.id == trick.user.id %}
                                            <div class="row">
                                                <div class="col-6">
                                                    <a href="{{ path('trick_edit', {id: trick.id}) }}">
                                                        <i class="fe-edit-2"></i>
                                                    </a>
                                                </div>
                                                <div class="col-6">
                                                    <form method="post" action="{{ path('trick_delete', {id: trick.id}) }}" style="display: inline-block" onsubmit="return confirm('Êtes vous vraiement sûr ?')">
                                                        <input type="hidden" name="_method" value="DELETE">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trick.id) }}">
                                                        <button class="btn p-0"><i class="fe-trash"></i></button>
                                                    </form>
                                                </div>
                                            </div>
                                        {% endif %}
                                    {% endif %}

                                </div>
                            </div>

                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>






{% endblock %}
